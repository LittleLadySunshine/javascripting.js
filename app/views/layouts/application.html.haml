!!!
%html
  %head
    %title
      = content_for(:title) || "Students"
    = stylesheet_link_tag '//fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic,700italic'
    = stylesheet_link_tag "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = favicon_link_tag 'favicon.ico'
  %body
    %header
      = link_to image_tag(image_path('gschool_logo.png')), user_session.signed_in? ? dashboard_path : root_path

      %nav
        %ul
          %li
            = render partial: 'layouts/navigation'
    %main
      -if flash.any?
        #flash
          - flash.each do |name, msg|
            = content_tag :div, msg, class: name

      = yield
    %footer
      All material licensed under #{link_to 'Creative Commons Attribution-NonCommercial-ShareAlike 4.0 International License', 'http://creativecommons.org/licenses/by-nc-sa/4.0/', rel:'license', target: 'license'}
      =image_tag 'http://i.creativecommons.org/l/by-nc-sa/4.0/80x15.png', alt: "Creative Commons License"