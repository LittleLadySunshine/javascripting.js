!!!
%html
  %head
    %title
      = content_for(:title) || "Students"
    = stylesheet_link_tag '//fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic,700italic'
    = stylesheet_link_tag "application", media: "all"
    = csrf_meta_tags
    = favicon_link_tag 'favicon.ico'
    %meta(name="viewport" content="width=device-width, initial-scale=1")
  %body
    %header
      .menu-wrapper
        = link_to user_session.signed_in? ? student_dashboard_path : root_path, class: 'logo' do
          = image_tag(image_path('gschool_logo-large.png'), class: 'header-logo-image')
        .nav
          - if user_session.signed_in?
            = render partial: 'layouts/navigation/signed_in'
        .navigation-tools
          - if user_session.signed_in?
            = link_to t('nav.sign_out'), logout_path
          - else
            = link_to t('nav.sign_in'), sign_in_using_github_path

    - if flash.any?
      #flash
        - flash.each do |name, msg|
          = content_tag :div, msg, class: "flash-#{name}"
    %main
      = yield
    %footer
      %section
        All material licensed under #{link_to 'Creative Commons Attribution-NonCommercial-ShareAlike 4.0 International License', 'http://creativecommons.org/licenses/by-nc-sa/4.0/', rel:'license', target: 'license'}
        =image_tag '//i.creativecommons.org/l/by-nc-sa/4.0/80x15.png', alt: "Creative Commons License"

    = javascript_include_tag "application"
    = content_for(:javascripts)
