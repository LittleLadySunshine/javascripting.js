!!!
%html
  %head
    %title
      = content_for(:title) || "Students"
    = stylesheet_link_tag '//fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic,700italic'
    = stylesheet_link_tag "application", media: "all"
    = csrf_meta_tags
    = favicon_link_tag 'favicon.ico'
    %meta(name="viewport" content="width=device-width, initial-scale=1")
  %body
    #body_container
      %header.navigation
        .navigation-wrapper
          .navigation-tools
            - if user_session.signed_in?
              = link_to t('nav.sign_out'), logout_path
            - else
              = link_to t('nav.sign_in'), sign_in_using_github_path
          .logo
            = link_to user_session.signed_in? ? student_students_path : root_path, class: 'logo' do
              = image_tag(image_path('gschool_logo-large.png'), class: 'header-logo-image')

          - if user_session.signed_in?
            .nav
              - current_user = user_session.current_user
              %ul#navigation-menu
                - if current_user.is?(User::INSTRUCTOR)
                  = nav_item t('nav.instructors'), instructor_dashboard_path
                  = nav_item t('nav.exercises'), instructor_exercises_path
                - else
                  - if current_user.cohort
                    = nav_item "Curriculum", current_user.cohort.curriculum_site_url
                  = nav_item "Cohort", student_students_path
                = nav_item "Personal Info", personal_information_path

      - if flash.any?
        #flash
          - flash.each do |name, msg|
            = content_tag :div, msg, class: "flash-#{name}"
      = content_for(:outside_main)
      %main
        = yield
      %footer
        %section
          .github
            = link_to image_tag("GitHub-Mark-32px.png"), "https://github.com/gSchool/students.gschool.it", target: "_blank"

    = javascript_include_tag "application"
    = content_for(:javascripts)
