%h1= link_to "Quiz Templates", assessments_quiz_templates_path
%h2= @quiz_template.name

- @quiz_template.questions.each do |question|
  .question
    = question

= form_tag create_quizzes_for_cohort_assessments_quiz_template_path(@quiz_template), class: 'create-quiz-form' do
  = collection_select :template_creator, :cohort_id, Cohort.all, :id, :name
  = submit_tag 'Create Quizzes for Cohort', class: 'action'

= form_tag create_quiz_for_user_assessments_quiz_template_path(@quiz_template), class: 'create-quiz-form' do
  = collection_select :template_creator, :user_id, User.all.sort_by{|u| u.full_name.downcase }, :id, :full_name
  = submit_tag 'Create Quiz for User', class: 'action'
