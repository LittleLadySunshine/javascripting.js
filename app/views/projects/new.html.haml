.page-header
  %h1 New Project for #{@user.full_name}

- if @cohort
  = render 'student/sub_nav'
- else
  %ol.breadcrumb
    %li= link_to "Users", instructor_users_path
    %li= link_to @user.full_name, instructor_user_path(@user)
    %li= link_to 'Projects', user_projects_path(@user)
    %li.active New

= form_for [@user, @project], url: user_projects_path(@user), html: {class: "form-horizontal"} do |f|
  = render 'form', f: f
