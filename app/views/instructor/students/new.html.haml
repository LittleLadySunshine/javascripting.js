.page-header
  %h2 Add a student to #{@cohort.name}

= form_for @student, url: instructor_cohort_students_path(params[:cohort_id]), as: :student, html: {class: "form-horizontal"} do |f|
  = errors_for(f)

  .form-group
    = f.label :first_name, class: "col-sm-2 control-label"
    .col-sm-6
      = f.text_field :first_name, class: "form-control"

  .form-group
    = f.label :last_name, class: "col-sm-2 control-label"
    .col-sm-6
      = f.text_field :last_name, class: "form-control"

  .form-group
    = f.label :email, class: "col-sm-2 control-label"
    .col-sm-6
      = f.email_field :email, class: "form-control"

  .col-sm-offset-2
    = f.submit value: 'Add Student', class: 'btn btn-primary'
