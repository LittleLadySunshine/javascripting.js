.page-header
  %h2 Edit #{@student.first_name_was} #{@student.last_name_was}

= form_for @student, url: instructor_cohort_student_path(params[:cohort_id], params[:id]), as: :student, html: {class: "form-horizontal"} do |f|
  = bootstrap_errors_for(f)

  .form-group
    = f.label :first_name, class: "col-sm-2 control-label"
    .col-sm-4
      = f.text_field :first_name, class: "form-control"

  .form-group
    = f.label :last_name, class: "col-sm-2 control-label"
    .col-sm-4
      = f.text_field :last_name, class: "form-control"

  .form-group
    = f.label :email, class: "col-sm-2 control-label"
    .col-sm-4
      = f.email_field :email, class: "form-control"

  .form-group
    = f.label :avatar, class: "col-sm-2 control-label"
    .col-sm-4
      = f.file_field :avatar, class: "form-control"

  .col-sm-offset-2
    = f.submit value: 'Update Student', class: 'btn btn-primary'
