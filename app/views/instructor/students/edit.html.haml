= form_for @student, url: instructor_cohort_student_path(params[:cohort_id], params[:id]), as: :student do |f|
  = errors_for(f)

  %p
    = f.label :first_name
  %p
    = f.text_field :first_name

  %p
    = f.label :last_name
  %p
    = f.text_field :last_name

  %p
    = f.label :email
  %p
    = f.text_field :email

  %p
    = f.label :avatar
  %p
    = f.file_field :avatar

  %p
    = f.submit value: 'Update Student', class: 'action'
