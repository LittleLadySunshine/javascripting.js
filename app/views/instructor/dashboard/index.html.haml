%section
  %h2 Cohorts
  - @cohorts.each do |cohort|
    = link_to instructor_cohort_path(cohort), class: "card" do
      .title= cohort.name
      %hr
      %p= pluralize(cohort.students.count, "student")
      %p
        = pluralize(cohort.cohort_exercises.count, "exercise")
        released


%section
  %h2 gSchool Exercises

  .action-table
    %table
      %tbody
        - @exercises.each do |exercise|
          %tr
            %td= link_to exercise.name, instructor_exercise_path(exercise)

    .actions
      = link_to 'Create Exercise', new_instructor_exercise_path, class: 'button'
