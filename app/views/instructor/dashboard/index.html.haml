.page-header
  .pull-right
    = link_to "New Cohort", new_instructor_cohort_path, class: "btn btn-info"

  %h2 Cohorts

.row
  - @cohorts.each do |cohort|
    .col-md-6
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            = link_to instructor_cohort_path(cohort), style: "display: block;" do
              = cohort.name
        .panel-body
          %ul
            %li= link_to "Students", instructor_cohort_path(cohort)
            %li= link_to "1-on-1 Schedule", one_on_ones_instructor_cohort_path(cohort)
            %li= link_to "Pairs", instructor_cohort_pairs_path(cohort)
            %li= link_to "Exercises", instructor_cohort_cohort_exercises_path(cohort)
            %li= link_to "Attendance", new_instructor_cohort_attendance_sheet_path(cohort)
            %li= link_to "Edit", edit_instructor_cohort_path(cohort)
            %li= link_to "Tracker Accounts", instructor_cohort_tracker_accounts_path(cohort)
