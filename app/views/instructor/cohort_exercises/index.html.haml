.page-header
  .pull-right
    = link_to "Assign Exercise", new_instructor_cohort_cohort_exercise_path, class: "btn btn-info"
  %h1= @cohort.name

= render partial: 'instructor/cohorts/nav', locals: { cohort: @cohort }

%table.table
  %thead
    %tr
      %th Exercise Name
      %th # of Students Submitted
      %th Actions
  %tbody
    - @cohort_exercises.each do |cohort_exercise|
      %tr
        %td= link_to cohort_exercise.name, cohort_exercise.exercise.github_repo_url
        %td.submission_count= link_to(cohort_exercise.submissions.count, instructor_cohort_cohort_exercise_path(@cohort, cohort_exercise))
        %td= link_to(instructor_cohort_cohort_exercise_path(@cohort, cohort_exercise), { method: :delete, class: 'remove-exercise-action' } ){ icon('times') } if cohort_exercise.submissions.count == 0
