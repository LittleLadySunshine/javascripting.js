.page-header
  .pull-right
    = link_to "Add Student", new_instructor_cohort_student_path(params[:id]), class: "btn btn-info"
  %h1 #{cohort.name} Dashboard

= render partial: 'instructor_cohort_sub_nav_bootstrap', locals: { cohort_id: params[:id] }

%table.table
  %thead
    %th Student
    %th
      %a{"href" => "", "data-clipboard-text" => students.map(&:email).join(", ")} Email
    %th Actions
  %tbody
    - students.each do |student|
      %tr
        %td= link_to student.full_name, instructor_cohort_student_path(cohort, student)
        %td
          %a{"href" => "#", "data-clipboard-text" => student.email}= student.email
        %td
          - if student.github_username
            = link_to "GitHub", student.github_url, target: '_blank'
