.page-header
  .pull-right
    = link_to "New Cohort", new_instructor_cohort_path, class: "btn btn-info"

  %h2 Cohorts

.row
  - @cohorts.each do |cohort|
    .col-md-6
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            = link_to instructor_cohort_path(cohort), style: "display: block;" do
              = cohort.name
        .panel-body
          %ul
            - instructor_cohort_links(cohort).each do |link|
              %li= link_to link.text, link.path
