.page-header
  .pull-right
    = link_to refresh_acceptance_instructor_cohort_path(@cohort), class: "btn btn-primary", method: :post, data: {disable_with: "Refreshing..."} do
      %i.glyphicon.glyphicon-refresh
      Refresh
  %h1 #{@cohort.name} Acceptance Links

= render partial: 'nav', locals: { cohort: @cohort }

%table.table.table-bordered.table-striped
  %thead
    %tr
      %th Name
      %th Accepted Count
      %th Delivered Count
      %th(colspan="3" class="text-center") gCamp
  %tbody
    - @users.each do |user|
      %tr
        %td= link_to user.full_name, instructor_user_path(user, cohort_id: @cohort)
        %td
          = @tracker_statuses[user.id].try(:accepted) || "?"
        %td
          = @tracker_statuses[user.id].try(:delivered) || "?"
          - if created = @tracker_statuses[user.id].try(:created_at)
            %small.text-muted
              (#{time_ago_in_words(created)})
        %td
          - if user.gcamp_tracker_url?
            = link_to 'Tracker', user.gcamp_tracker_url, target: :_blank
        %td
          - if user.gcamp_url?
            = link_to 'Heroku', user.gcamp_url, target: :_blank
        %td= link_to "#{user.github_username}/gCamp", "http://github.com/#{user.github_username}/gCamp", target: :_blank
