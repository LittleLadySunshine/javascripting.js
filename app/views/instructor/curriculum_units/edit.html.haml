.page-header
  %h1 Edit Curriculum Unit

%ol.breadcrumb
  %li= link_to "Curriculum Units", instructor_curriculum_curriculum_units_path(@curriculum)
  %li= link_to @curriculum_unit.name_was, instructor_curriculum_curriculum_unit_path(@curriculum, @curriculum_unit)
  %li.active Edit

= render 'form'

.row
  .col-md-10.col-md-offset-2.text-center
    .well
      = link_to "Delete",
                instructor_curriculum_curriculum_unit_path(@curriculum, @curriculum_unit),
                method: :delete,
                data: {confirm: "Are you sure?"},
                class: "btn btn-danger"
