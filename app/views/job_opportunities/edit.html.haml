%h2 Edit Your Job Opportunity
= form_for job_opportunity do |f|
  %ul.job_opportunity
    %li
      = f.label :company_name
      = f.text_field :company_name
    %li
      = f.label :company_location
      = f.text_field :company_location
    %li
      = f.label :contact_name
      = f.text_field :contact_name
    %li
      = f.label :contact_email
      = f.email_field :contact_email
    %li
      = f.label :contact_number
      = f.text_field :contact_number
    %li
      = f.label :salary
      = f.text_field :salary
    %li
      = f.label :job_status
      = f.select :job_status,[ "Interested", "Applied", "Interviewing", "Rejected", "Accepted"], :include_blank => true
    %li
      = f.label :decision
      = f.select :decision, ["Accepted", "Declined"], :include_blank => true
    %li
      = f.label :job_title
      = f.text_field :job_title
    %li
      = f.submit "Update Job", class: "action"
