- content_for(:outside_main) do
  .hero{:style => "background-image: url(#{@student.avatar_url(:hero)}), linear-gradient(10deg, #844507, #d37b05), none;"}
    .hero-inner
      .hero-copy
        %h1
          = @student.first_name
          %br
          = @student.last_name


.student-information
  %aside
    .links
      = link_to image_tag("linked_in.png"), @student.linkedin
      = link_to image_tag("GitHub-Mark-120px-plus.png"), @student.github_url
      = link_to image_tag("Twitter_logo_blue.png"), @student.twitter_url

  .portfolio

