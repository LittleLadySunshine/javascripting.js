.page-header
  .pull-right
    = link_to "Back", :back, class: "btn btn-info"
  %h1= @student.full_name

= render 'student/sub_nav'

.row
  .col-md-4
    = image_tag(@student.avatar.url(:card), class: "img-responsive")
  .col-md-8
    %h2 Personal Info
    %dl.horizontal
      %dt Email:
      %dd= @student.email

      %dt Phone:
      %dd= @student.phone

      %dt Twitter:
      %dd
        - if @student.twitter.present?
          = link_to @student.twitter, @student.twitter_url

      %dt Linkedin:
      %dd
        - if @student.linkedin.present?
          = link_to @student.linkedin, @student.linkedin

      %dt Blog:
      %dd
        - if @student.blog.present?
          = link_to @student.blog, @student.blog

    %h2 gCamp
    %dl.dl-horizontal
      %dt Tracker URL:
      %dd
        - if @student.gcamp_tracker_url?
          = link_to @student.gcamp_tracker_url, @student.gcamp_tracker_url

      %dt Production URL:
      %dd
        - if @student.gcamp_url?
          = link_to @student.gcamp_url, @student.gcamp_url
