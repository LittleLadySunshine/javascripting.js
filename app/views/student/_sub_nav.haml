- tab ||= nil

%ul.nav.nav-tabs
  = nav_item "Exercises", cohort_exercises_path(@cohort)
  - if @cohort.class_notes_repo_name?
    = nav_item "Today's Class Notes", today_cohort_class_notes_path(@cohort), active: tab == :todays_class_notes
    = nav_item "Class Notes", cohort_class_notes_path(@cohort), active: tab == :class_notes
  = nav_item "Students", cohort_students_path(@cohort)
  = nav_item "Info", cohort_info_path(@cohort)
  - if @cohort.pair_feedback_url?
    = nav_item "Pair Feedback", @cohort.pair_feedback_url
  = nav_item "Personal Project", cohort_personal_project_path(@cohort)
  = nav_item "Action Plan", cohort_action_plan_entries_path(@cohort)
  = nav_item "Pair Bingo", cohort_pairings_path(@cohort)
  = nav_item "Writeups", cohort_writeups_path(@cohort)
  = nav_item "Curriculum", @cohort.curriculum_site_url
