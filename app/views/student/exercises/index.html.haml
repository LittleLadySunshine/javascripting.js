.sub-nav
  = render partial: 'student/sub_nav'

  .content
    %h2 Exercises
    %table
      %thead
        %tr
          %th Name
          %th Tags
          %th Completed?
      %tbody
        - @exercises.each do |exercise|
          %tr
            %td= link_to exercise.name, student_exercise_path(exercise)
            %td= exercise.tag_list
            %td= exercise.completed_text

