= errors_for(f)
- rows = 12

.form-group
  = f.label :first_name, class: "col-sm-2 control-label"
  .col-sm-4
    = f.text_field :first_name, class: "form-control", autofocus: true

.form-group
  = f.label :last_name, class: "col-sm-2 control-label"
  .col-sm-4
    = f.text_field :last_name, class: "form-control"

.form-group
  = f.label :email, class: "col-sm-2 control-label"
  .col-sm-4
    = f.email_field :email, class: "form-control"

.form-group
  = f.label :company_name, class: "col-sm-2 control-label"
  .col-sm-4
    = f.text_field :company_name, class: "form-control"

.form-group
  .col-md-offset-2.col-md-4
    = f.submit class: 'btn btn-primary'
    - path = cohort_student_mentors_path(@cohort, @user)
    = link_to "cancel", path, class: "btn btn-default"
