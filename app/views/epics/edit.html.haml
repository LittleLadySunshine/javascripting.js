.page-header
  %h1 Edit Epic

%ol.breadcrumb
  %li= link_to "Class Projects", class_projects_path
  %li= link_to "#{@class_project.name} Epics", class_project_epics_path(@class_project)
  %li.active Edit

- url = class_project_epic_path(@class_project, @epic)
= form_for @epic, url: url, html: {class: "form-horizontal"} do |f|
  = render 'form', f: f

.row
  .col-md-4.col-md-offset-2
    .well.text-center
      = link_to "Delete",
                class_project_epic_path(@class_project, @epic),
                method: :delete,
                data: {confirm: "Are you sure?"},
                class: "btn btn-danger"
